
@{
    ViewBag.Title = "Factors";
}

@Scripts.Render("~/bundles/jquery")

<script src="https://cdn.anychart.com/js/8.0.1/anychart-core.min.js"></script>
<script src="https://cdn.anychart.com/js/8.0.1/anychart-pie.min.js"></script>

<style>
    .list-item {
        padding-top: 2%;
        padding-bottom: 2%;
        font-size: large;
        list-style-type: none;
    }
</style>

<div class="jumbotron">
    <h1 style="text-align:center">Factors</h1>
</div>

<div class="container">
    <div class="row" style="width:100%">
        <div id="chart" style="height:25vw" class="col-8"></div>
    </div>
</div>

<script type="text/javascript">
$(document).ready(function () {

    var object = @(Html.Raw(Json.Encode(Model)));
    var data = JSON.parse(JSON.stringify(object.ResultFactorsList));
        // create data set
    var chart = anychart.pie();

    chart.title("Accidents factors");
    chart.legend().position("right");
    chart.legend().itemsLayout("vertical");
    
    chart.data(data);
    chart.container('chart');
    chart.draw();

});
</script>
